<UserControl x:Class="QuizHut.View.Pages.ChooseRoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizHut.View.Pages"
             mc:Ignorable="d" 
             Background="Transparent"
             d:Height="215" d:Width="350">
    <Border CornerRadius="15"
            BorderThickness="3">
        <Border.Background>
            <SolidColorBrush Color="#A5ACD2" Opacity="0.7"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="35"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                       Text="Регистрация.Выберите роль"
                       Margin="10,5,0,0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       FontFamily="{StaticResource Manrope}"/>

            <Button 
                    Grid.Row="2" Grid.Column="1"
                    Content="Учащийся"
                    Background="White"
                    Foreground="#6D6D6D"
                    FontSize="14"
                    FontWeight="Bold"
                    Template="{StaticResource ButtonTemplate2}"/>
            
            <Button Grid.Row="4" Grid.Column="1"
                    Content="Преподаватель"
                    Background="White"
                    Foreground="#6D6D6D"
                    FontSize="14"
                    FontWeight="Bold"
                    Template="{StaticResource ButtonTemplate2}"/>
            
            <Button Grid.Row="6" Grid.Column="1"/>
        </Grid>
    </Border>
</UserControl>
