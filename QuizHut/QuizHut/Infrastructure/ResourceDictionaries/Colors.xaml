<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background colors -->
    <SolidColorBrush x:Key="PrimaryLoginPagesBackgroundColor" Color="#A5ACD2" Opacity="0.7"/>
    <SolidColorBrush x:Key="PrimaryMainViewBackround" Color="#FFDDF7"/>
    <SolidColorBrush x:Key="SecondaryMainViewBackround" Color="#481269"/>

    <!-- Controls colors -->
    <SolidColorBrush x:Key="PrimaryActiveColor" Color="#E42380"/>
    <SolidColorBrush x:Key="SecondaryActiveColor" Color="#6D6D6D"/>
    <SolidColorBrush x:Key="menuOverColor" Color="#661995"/>

    <!-- Text colors-->
    <SolidColorBrush x:Key="PrimaryFontColor" Color="#333333"/>
    <SolidColorBrush x:Key="SecondaryFontColor" Color="#FDF0FF"/>
    <SolidColorBrush x:Key="FontColor3" Color="#F7C3EB"/>
    <SolidColorBrush x:Key="PrimaryWaterMarkerLabelColor" Color="#777777"/>
    <SolidColorBrush x:Key="PrimaryErrorMessageColor" Color="#A8323C"/>
    
    <!-- Others -->
    <SolidColorBrush x:Key="Color1" Color="#E285DE"/>
    <SolidColorBrush x:Key="Color2" Color="#4ADAEC"/>
    <SolidColorBrush x:Key="Color3" Color="#FB539B"/>
    <SolidColorBrush x:Key="Color4" Color="#FFC047"/>
    <SolidColorBrush x:Key="Color5" Color="#78A3FC"/>
    <SolidColorBrush x:Key="Color6" Color="#5FA75F"/>
    <SolidColorBrush x:Key="Color7" Color="#FF93AC"/>

</ResourceDictionary>