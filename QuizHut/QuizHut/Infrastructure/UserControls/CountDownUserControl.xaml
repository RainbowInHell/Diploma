<UserControl x:Class="QuizHut.Infrastructure.UserControls.CountDownUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizHut.Infrastructure.UserControls"
             xmlns:localVM="clr-namespace:QuizHut.ViewModels.MainViewModels.QuizViewModels.PassingQuizViewModels"
            
             mc:Ignorable="d" 
             d:Height="50" d:Width="800">
    <UserControl.DataContext>
        <localVM:CountDownViewModel/>
    </UserControl.DataContext>
    
    <TextBlock Style="{StaticResource MainTextBlock}"
                   Text="{Binding TimeRemainingText}" FontSize="40"
                   Height="50"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
</UserControl>
