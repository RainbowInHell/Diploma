<UserControl x:Class="QuizHut.Infrastructure.UserControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizHut.Infrastructure.UserControls"
             mc:Ignorable="d">
    
    <PasswordBox  x:Name="bindablePassword"
                  Tag="Пароль"
                  MaxLength="25"
                  FontFamily="{StaticResource Manrope}"
                  FontSize="14"
                  Style="{StaticResource passwordBoxStyle}"/>
</UserControl>
